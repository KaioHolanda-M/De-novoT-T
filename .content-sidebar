 .container {
    display: flex;
  }
  
  /* Sidebar (abas laterais) */
  .sidebar {
    width: 220px;
    background: #333;
    color: #fff;
    height: 100vh;
    padding-top: 20px;
    box-sizing: border-box;
  }
  
  .sidebar ul {
    list-style-image: b0f25239-857c-40f5-96c2-d049e327b943;
    padding: 0;
    margin: 0;
  }
  
  .sidebar li {
    padding: 15px 20px;
    cursor: pointer;
    border-bottom: 1px solid #444;
  }
  
  .sidebar li:hover {
    background: #444;
  }
  
  .sidebar li.active {
    background: #555;
  }
  
  /* Área de conteúdo */
  .content {
    flex-grow: 1;
    padding: 20px;
    background: #fff;
    min-height: 100vh;
  }
  
  /* Estilos para os conteúdos de cada aba */
  .tab-content {
    display: none;
  }
  
  .tab-content.active {
    display: block;
  }
</style>

</head>
<body>
<div class="container">
<!-- Sidebar com as abas -->
<div class="sidebar">
<ul>
<li class="active" data-tab="home-tab">Home</li>
<li data-tab="sobre-tab">Sobre</li>
<li data-tab="contato-tab">Contato</li>
</ul>
</div>

  <!-- Área de conteúdo que será alterada de acordo com a aba selecionada -->
  <div class="content">
    <div id="home-tab" class="tab-content active">
      <h1>Home</h1>
      <p>Bem-vindo ao nosso blog! Aqui você encontrará as últimas atualizações e novidades.</p>
    </div>
    <div id="sobre-tab" class="tab-content">
      <h1>Sobre</h1>
      <p>Este blog foi criado para compartilhar informações e experiências sobre diversos assuntos.</p>
    </div>
    <div id="contato-tab" class="tab-content">
      <h1>Contato</h1>
      <p>Entre em contato conosco pelo e-mail: contato@exemplo.com</p>
    </div>
  </div>
</div>

<!-- JavaScript para fazer a troca entre as abas -->
<script>
  // Seleciona todas as abas e conteúdos
  const tabs = document.querySelectorAll('.sidebar li');
  const contents = document.querySelectorAll('.tab-content');
  
  // Para cada aba, adiciona o evento de clique
  tabs.forEach(tab => {
    tab.addEventListener('click', function() {
      // Remove a classe 'active' das abas
      tabs.forEach(item => item.classList.remove('active'));
      // Adiciona a classe 'active' na aba clicada
      this.classList.add('active');
      
      // Esconde todos os conteúdos
      contents.forEach(content => content.classList.remove('active'));
      
      // Exibe o conteúdo que corresponde à aba clicada
      const activeTab = this.getAttribute('data-tab');
      document.getElementById(activeTab).classList.add('active');
    });
  });
</script>

</body>
</html>
